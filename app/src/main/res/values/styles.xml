<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="SearchCityDialog" parent="AppTheme.NoActionBar" >
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="WeatherLargeIcon" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">72sp</item>
        <item name="android:textColor">@color/colorGreyMd700</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WeatherMediumIcon" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">44sp</item>
        <item name="android:textColor">@color/colorGreyMd700</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WeatherLargeText" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/colorGreyMd900</item>
        <item name="android:textStyle">italic</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="WeatherMediumText" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorGreyMd800</item>
        <item name="android:typeface">sans</item>
    </style>
</resources>
