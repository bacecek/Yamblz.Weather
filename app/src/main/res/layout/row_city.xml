<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:background="@drawable/rounded_white_card_backfield"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/row_city_clickable_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="4dp">

        <sasd97.java_blog.xyz.circleview.CircleView
            android:id="@+id/row_city_alias"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="8dp"
            app:cv_backgroundColor="@color/colorPrimaryDark"
            app:cv_textColor="@android:color/white"
            app:cv_textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/row_city_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGreyMd800"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/row_city_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="start"
                android:textColor="@color/colorGreyMd900"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>