<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        style="@style/CardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/all_medium_margin">

        <RelativeLayout
            android:id="@+id/main_activity_choose_city"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:padding="@dimen/all_large_padding"
                app:srcCompat="@drawable/ic_cityscape_grey_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:paddingTop="@dimen/all_large_padding"
                android:paddingBottom="@dimen/all_large_padding"
                android:paddingLeft="@dimen/all_large_padding"
                android:paddingRight="@dimen/all_large_padding">

                <TextView
                    android:id="@+id/fragment_weather_header_city_title"
                    style="@style/WeatherMediumText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Kaluga" />

                <TextView
                    android:id="@+id/fragment_weather_header_city_area"
                    style="@style/WeatherMediumText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/all_small_margin"
                    android:layout_marginTop="@dimen/all_small_margin"
                    android:textSize="18sp"
                    tools:text="Russia" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>