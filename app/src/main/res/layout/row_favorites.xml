<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_favorites_card"
    style="@style/CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/all_medium_margin"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:layout_marginTop="@dimen/all_medium_margin"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/row_favorites_clickable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/row_favorites_city"
                style="@style/WeatherMediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Kaluga" />

            <TextView
                android:id="@+id/row_favorites_area"
                style="@style/WeatherMediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:textSize="18sp"
                tools:text="Russia" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>